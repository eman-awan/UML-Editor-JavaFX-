<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane xmlns:fx="http://javafx.com/fxml" fx:controller="Main.OpeningWindowController"
            prefHeight="450.0" prefWidth="700.0"
            style="-fx-background-color: linear-gradient(to bottom, #ffffff, #e0e0e0); -fx-padding: 20px;">

    <top>
        <HBox alignment="CENTER" style="-fx-padding: 10px 0;">
            <Label text="UML Diagram Creator"
                   style="-fx-font-size: 28px; -fx-font-family: 'Arial Black'; -fx-text-fill: #2c3e50;"/>
        </HBox>
    </top>

    <center>
        <VBox spacing="40.0" alignment="CENTER">
            <Label text="Welcome to UML Diagram Creator!" fx:id="welcomeLabel"
                   style="-fx-font-size: 22px; -fx-font-family: 'Arial'; -fx-text-fill: #34495e;"/>
            <HBox spacing="30.0" alignment="CENTER">
                <VBox alignment="CENTER" spacing="10.0">
                    <ImageView fx:id="startIcon" fitWidth="80.0" fitHeight="80.0">
                        <image>
                            <Image url="@../Icons/start_project_icon.png"/>
                        </image>
                    </ImageView>
                    <Button text="Start New Project" focusTraversable="false" fx:id="startProjectButton"
                            onAction="#onStartProjectClick"
                            style="-fx-background-color: #27ae60; -fx-text-fill: white; -fx-font-size: 14px; -fx-padding: 10px 20px; -fx-border-radius: 10px; -fx-background-radius: 10px;"/>
                </VBox>
                <VBox alignment="CENTER" spacing="10.0">
                    <ImageView fx:id="openIcon" fitWidth="80.0" fitHeight="80.0">
                        <image>
                            <Image url="@../Icons/open_project_icon.png"/>
                        </image>
                    </ImageView>
                    <Button text="Open Existing Project" focusTraversable="false" fx:id="openProjectButton"
                            onAction="#onOpenProjectClick"
                            style="-fx-background-color: #2980b9; -fx-text-fill: white; -fx-font-size: 14px; -fx-padding: 10px 20px; -fx-border-radius: 10px; -fx-background-radius: 10px;"/>
                </VBox>
            </HBox>
        </VBox>
    </center>

    <bottom>
        <HBox alignment="CENTER" style="-fx-padding: 10px; -fx-background-color: #2c3e50;">
            <Label text="Â© 2024 UML Diagram Creator by EAL. All rights reserved."
                   style="-fx-font-size: 12px; -fx-font-family: 'Arial'; -fx-text-fill: #ecf0f1;"/>
        </HBox>
    </bottom>

</BorderPane>
