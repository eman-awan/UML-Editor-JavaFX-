<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.collections.*?>

<?import java.lang.String?>
<VBox xmlns:fx="http://javafx.com/fxml"
      fx:controller="Main.SettingsController"
      spacing="10" alignment="CENTER" style="-fx-padding: 20;">
    <Label text="Settings" style="-fx-font-size: 18px; -fx-font-weight: bold;" />
    <HBox spacing="10">
        <Label text="Theme:" />
        <ChoiceBox fx:id="themeChoiceBox" prefWidth="150">
            <items>
                <FXCollections fx:factory="observableArrayList">
                    <String fx:value="Light" />
                    <String fx:value="Dark" />
                </FXCollections>
            </items>
        </ChoiceBox>
    </HBox>
    <Button text="Save" onAction="#handleSaveSettings" />
</VBox>
